{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": ".build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@functions/*": ["./src/functions/*"],
      "@libs/*": ["./src/libs/*"],
      "@models/*": ["./src/models/*"],
      "@services/*": ["./src/services/*"],
      "@test/*": ["./test/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
